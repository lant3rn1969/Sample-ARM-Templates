{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Admin username"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      }
    },
    "winWebImageSKU": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter"
      ],
      "metadata": {
        "description": "The Windows version for the VM"
      }
    },
    "ubuntuOSVersion": {
      "type": "string",
      "defaultValue": "14.04.2-LTS",
      "allowedValues": [
        "12.04.5-LTS",
        "14.04.2-LTS",
        "15.10"
      ],
      "metadata": {
        "description": "The Ubuntu version for the VM. This will pick a fully patched image of this given Ubuntu version. Allowed values: 12.04.5-LTS, 14.04.2-LTS, 15.10."
      }
    },
    "winWebVmSize": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "Standard_D2_v2",
      "allowedValues": [
        "Basic_A0",
        "Basic_A1",
        "Basic_A2",
        "Basic_A3",
        "Basic_A4",
        "Standard_A0",
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6",
        "Standard_A7",
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2"
      ],
      "metadata": {
        "description": "Size of the virtual machine, must be available in the virtual machine's location"
      }
    },
    "adBoxVmSize": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "Standard_D2_v2",
      "allowedValues": [
        "Basic_A0",
        "Basic_A1",
        "Basic_A2",
        "Basic_A3",
        "Basic_A4",
        "Standard_A0",
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6",
        "Standard_A7",
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2"
      ],
      "metadata": {
        "description": "Size of the virtual machine, must be available in the virtual machine's location"
      }
    },
    "jumpBoxVmSize": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "Standard_D2_v2",
      "allowedValues": [
        "Basic_A0",
        "Basic_A1",
        "Basic_A2",
        "Basic_A3",
        "Basic_A4",
        "Standard_A0",
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6",
        "Standard_A7",
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2"
      ],
      "metadata": {
        "description": "Size of the virtual machine, must be available in the virtual machine's location"
      }
    },
    "linuxVMSize": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "Standard_D2_v2",
      "allowedValues": [
        "Basic_A0",
        "Basic_A1",
        "Basic_A2",
        "Basic_A3",
        "Basic_A4",
        "Standard_A0",
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_A5",
        "Standard_A6",
        "Standard_A7",
        "Standard_D1_v2",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2"
      ]
    },

    "numberOfWebWinInstances": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 3,
      "metadata": {
        "description": "Number of Windows VM instances to be created for web API and WCF usage behind external load balancer control"
      }
    },
    "numberOfSqlInstances": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 2,
      "metadata": {
        "description": "Number of Windows VM instances to be created for SQL usage behind internal load balancer control"
      }
    },
    "numberOfLinuxInstances": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 4,
      "metadata": {
        "description": "Number of Linux VM instances to be created for API usage behind application gateway control"
      }
    },
    "templatesBaseUrl": {
      "type": "string"
    }
  },
  "variables": {
    "virtualNetworkName": "OpSheetVNet",
    "vnetIPRange": "10.0.0.0/16",
    "webSubnetRange": "10.0.0.0/26",
    "webSubnetStartIp": "10.0.0.5", 
    "webSubnetRange2": "10.0.0.64/26",
    "dataSubnetRange": "10.0.1.0/24",
    "opsSubnetRange": "10.0.2.0/24",
    "sbSubnetRange": "10.0.3.0/24",
    "sqlLBFEIPAddress": "10.0.1.100",
    "SBsqlLBFEIPAddress": "10.0.1.101",
    "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
    "webSubnetName": "WebSubnet",
    "webSubnetRef": "[concat(variables('vnetId'), '/subnets/', variables('webSubnetName'))]",
    "webSubnetName2": "AppGatewaySubnet",
    "webSubnetRef2": "[concat(variables('vnetId'), '/subnets/', variables('webSubnetName2'))]",
    "dataSubnetName": "DataSubnet",
    "dataSubnetRef": "[concat(variables('vnetId'), '/subnets/', variables('dataSubnetName'))]",
    "opsSubnetName": "OpsSubnet",
    "opsSubnetRef": "[concat(variables('vnetId'), '/subnets/', variables('opsSubnetName'))]",
    "sbSubnetName": "ServiceBusSubnet",
    "sbSubnetRef": "[concat(variables('vnetId'), '/subnets/', variables('sbSubnetName'))]",
    "webNetworkSecurityGroupName": "WebSubnetSecurityGroup",
    "dataNetworkSecurityGroupName": "DataSubnetSecurityGroup",
    "opsNetworkSecurityGroupName": "OpsSubnetSecurityGroup",
    "sbNetworkSecurityGroupName": "ServiceBuxSubnetSecurityGroup",
    "networkInterface2NamePrefix": "DataVMNic",
    "provisioningOps": "[concat(parameters('templatesBaseUrl'),'/opSheetAdPlusJumpBox.json')]",
    "provisioningWeb": "[concat(parameters('templatesBaseUrl'),'/opSheetWeb.json')]",
    "provisioningSql": "[concat(parameters('templatesBaseUrl'),'/opSheetSqlAlwaysOn.json')]",
    "provisioningServiceBus": "[concat(parameters('templatesBaseUrl'),'/opSheetServiceBus.json')]",
    "provisioningAppGateway": "[concat(parameters('templatesBaseUrl'),'/opSheetApplicationGateway.json')]",
    "diagnosticsStorageAccountName": "[concat('diagstorage', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('diagnosticsStorageAccountName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Diagnostics Storage Account"
      },
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('virtualNetworkName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "VirtualNetwork"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('webNetworkSecurityGroupName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('dataNetworkSecurityGroupName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('opsNetworkSecurityGroupName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('sbNetworkSecurityGroupName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnetIPRange')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('webSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('webSubnetRange')]",
              "networkSecurityGroup": {
                "id": "[resourceId(resourceGroup().Name, 'Microsoft.Network/networkSecurityGroups', variables('webNetworkSecurityGroupName'))]"
              }
            }
          },
          {
            "name": "[variables('webSubnetName2')]",
            "properties": {
              "addressPrefix": "[variables('webSubnetRange2')]",
              "networkSecurityGroup": {
                "id": "[resourceId(resourceGroup().Name, 'Microsoft.Network/networkSecurityGroups', variables('webNetworkSecurityGroupName'))]"
              }
            }
          },
          {
            "name": "[variables('dataSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('dataSubnetRange')]",
              "networkSecurityGroup": {
                "id": "[resourceId(resourceGroup().Name, 'Microsoft.Network/networkSecurityGroups', variables('dataNetworkSecurityGroupName'))]"
              }
            }
          },
          {
            "name": "[variables('opsSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('opsSubnetRange')]",
              "networkSecurityGroup": {
                "id": "[resourceId(resourceGroup().Name, 'Microsoft.Network/networkSecurityGroups', variables('opsNetworkSecurityGroupName'))]"
              }
            }
          },
          {
            "name": "[variables('sbSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('sbSubnetRange')]",
              "networkSecurityGroup": {
                "id": "[resourceId(resourceGroup().Name, 'Microsoft.Network/networkSecurityGroups', variables('sbNetworkSecurityGroupName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "ProvisioningWeb",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]",
        "[variables('vnetId')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('provisioningWeb')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "numberOfWebWinInstances": {
            "value": "[parameters('numberOfWebWinInstances')]"
          },
          "numberOfLinuxInstances": {
            "value": "[parameters('numberOfLinuxInstances')]"
          },
          "diagnosticsStorageName": {
            "value": "[variables('diagnosticsStorageAccountName')]"
          },
          "webSubnetRef": {
            "value": "[variables('webSubnetRef')]"
          },
          "webSubnetStartIp": {
            "value": "[variables('webSubnetStartIp')]" 
          }
        }
      }
    },
    {
      "name": "ProvisioningOps",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[variables('vnetId')]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('provisioningOps')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "opsSubnetRef": {
            "value": "[variables('opsSubnetRef')]"
          },
          "jumpBoxVmSize": {
            "value": "Standard_A2"
          },
          "adBoxVmSize": {
            "value": "Standard_A2"
          },
          "diagnosticsStorageName": {
            "value": "[variables('diagnosticsStorageAccountName')]"
          }
        }
      }
    },
    {
      "name": "ProvisioningSql",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]",
        "[variables('vnetId')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('provisioningSql')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "witnessVMSize": {
            "value": "Standard_GS1"
          },
          "dataSubnetRef": {
            "value": "[variables('dataSubnetRef')]"
          },
          "sqlLBIPAddress": {
            "value": "[variables('sqlLBFEIPAddress')]"
          },
          "SBsqlLBIPAddress": {
            "value": "[variables('SBsqlLBFEIPAddress')]"
          },
          "diagnosticsStorageName": {
            "value": "[variables('diagnosticsStorageAccountName')]"
          },
          "numberOfSqlInstances": {
            "value": "[parameters('numberOfSqlInstances')]"
          }
        }
      }
    },
    {
      "name": "ProvisioningServiceBus",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]",
        "[variables('vnetId')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('provisioningServiceBus')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "numberOfSBWinInstances": { "value": 3 },
          "diagnosticsStorageName": {
            "value": "[variables('diagnosticsStorageAccountName')]"
          },
          "sbSubnetRef": {
            "value": "[variables('sbSubnetRef')]"
          }
        }
      }
    },
    {
      "name": "ProvisioningAppGateway",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "ProvisioningWeb",
        "[variables('vnetId')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('provisioningAppGateway')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "webSubnetRef": {
            "value": "[variables('webSubnetRef2')]"
          },
          "uiBackEndPoolIP0": {
            "value": "[reference('ProvisioningWeb').outputs.uiIpAddress0.value]"
          },
          "uiBackEndPoolIP1": {
            "value": "[reference('ProvisioningWeb').outputs.uiIpAddress1.value]"
          },
          "apiBackEndPoolIP0": {
            "value": "[reference('ProvisioningWeb').outputs.apiIpAddress0.value]"
          },
          "apiBackEndPoolIP1": {
            "value": "[reference('ProvisioningWeb').outputs.apiIpAddress1.value]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "name": "[variables('webNetworkSecurityGroupName')]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp",
            "properties": {
              "priority": 1000,
              "sourceAddressPrefix": "10.0.0.0/22",
              "protocol": "Tcp",
              "destinationPortRange": "3389",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          },
          {
            "name": "default-allow-http",
            "properties": {
              "priority": 1500,
              "sourceAddressPrefix": "*",
              "protocol": "Tcp",
              "destinationPortRange": "80",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          },
          {
            "name": "default-allow-https",
            "properties": {
              "priority": 1501,
              "sourceAddressPrefix": "*",
              "protocol": "Tcp",
              "destinationPortRange": "443",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "name": "[variables('dataNetworkSecurityGroupName')]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp",
            "properties": {
              "priority": 1000,
              "sourceAddressPrefix": "10.0.0.0/22",
              "protocol": "Tcp",
              "destinationPortRange": "3389",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          },
          {
            "name": "default-allow-sql",
            "properties": {
              "priority": 1500,
              "sourceAddressPrefix": "10.0.1.0/24",
              "protocol": "Tcp",
              "destinationPortRange": "1433",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "name": "[variables('opsNetworkSecurityGroupName')]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp",
            "properties": {
              "priority": 1000,
              "sourceAddressPrefix": "*",
              "protocol": "Tcp",
              "destinationPortRange": "3389",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "name": "[variables('sbNetworkSecurityGroupName')]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp",
            "properties": {
              "priority": 1000,
              "sourceAddressPrefix": "10.0.0.0/22",
              "protocol": "Tcp",
              "destinationPortRange": "3389",
              "access": "Allow",
              "direction": "Inbound",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    }
  ]
}
